#include<stdio.h>
int isperfect(int n);
int main()
{
int n,per;
printf("Enter the value for n: ");
scanf("%d",&n);
per=isperfect(n);
if(per==n)
printf("%d is perfect number",n);
else
printf("%d is not a perfect number",n);
return 0;
}
int isperfect(int n)
{
int i,s=0;
for(i=1;i<n;i++)
{
if(n%i==0)
s=s+i;
}
return s;
}
